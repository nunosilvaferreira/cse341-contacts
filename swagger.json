{
  "openapi": "3.0.0",
  "info": {
    "title": "Contacts API",
    "version": "1.0.0",
    "description": "API for managing contacts. Reads/writes from seed/contacts.json and syncs with MongoDB."
  },
  "servers": [
    {
      "url": "https://cse341-contacts-v833.onrender.com",
      "description": "Render Deployment"
    },
    {
      "url": "http://localhost:3000",
      "description": "Local Development"
    }
  ],
  "paths": {
    "/contacts": {
      "get": {
        "summary": "Get all contacts",
        "responses": {
          "200": {
            "description": "List of all contacts from seed/contacts.json",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Contact" }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create a new contact (updates file + MongoDB)",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/ContactInput" },
              "example": {
                "firstName": "John",
                "lastName": "Doe",
                "email": "john@example.com",
                "favoriteColor": "Blue",
                "birthday": "1990-01-01"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Contact created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string",
                      "example": "650d2f2b4f1a3c1a24e7a123"
                    },
                    "message": { "type": "string" }
                  }
                }
              }
            }
          },
          "400": { "description": "Invalid input" }
        }
      }
    },
    "/contacts/{id}": {
      "get": {
        "summary": "Get a contact by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Contact found",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Contact" }
              }
            }
          },
          "404": { "description": "Contact not found" }
        }
      },
      "put": {
        "summary": "Update a contact by ID (updates file + MongoDB)",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/ContactInput" },
              "example": {
                "firstName": "John",
                "lastName": "Doe Updated",
                "email": "john@example.com",
                "favoriteColor": "Red",
                "birthday": "1990-01-01"
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Contact updated successfully" },
          "404": { "description": "Contact not found" }
        }
      },
      "delete": {
        "summary": "Delete a contact by ID (removes from file + MongoDB)",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": { "description": "Contact deleted successfully" },
          "404": { "description": "Contact not found" }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Contact": {
        "type": "object",
        "properties": {
          "_id": { "type": "string", "example": "650d2f2b4f1a3c1a24e7a123" },
          "firstName": { "type": "string", "example": "John" },
          "lastName": { "type": "string", "example": "Doe" },
          "email": { "type": "string", "example": "john@example.com" },
          "favoriteColor": { "type": "string", "example": "Blue" },
          "birthday": { "type": "string", "example": "1990-01-01" }
        }
      },
      "ContactInput": {
        "type": "object",
        "required": ["firstName", "lastName", "email"],
        "properties": {
          "firstName": { "type": "string" },
          "lastName": { "type": "string" },
          "email": { "type": "string" },
          "favoriteColor": { "type": "string" },
          "birthday": { "type": "string" }
        }
      }
    }
  }
}
